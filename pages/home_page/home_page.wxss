/* pages/home_page/home_page.wxss */
page {
  background-color: #fff;
}
.bg {
  width: 100%;
}
.user-info {
  border: 1px solid #D8E1EC;
  border-radius: 5px;
  margin: -60px 15px 0;
  background-color: #fff;
  position: relative;
  z-index: 1;
}
.head-info {
  display: flex;
  -webkit-display: flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: center;
  -webkit-justify-content: center;
  margin-bottom: 30rpx;
}
.head-info image {
  border-radius: 50%;
  margin-top: -90rpx;
}
.head-info .operation {
  width: 56rpx;
  height: 56rpx;
  border: 1px solid #5293EC;
}
.head-info .avatar {
  width: 180rpx;
  height: 180rpx;
  margin: -90rpx 60rpx 0;
}
.user-name {
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 12rpx;
}
.vip-point {
  font-size: 0;
  text-align: center;
  padding-bottom: 40rpx;
}
.vip-point > view {
  display: inline-block;
  vertical-align: middle;
}
.vip-point > view  image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.vip-point > view text {
  font-size: 32rpx;
  color: #6BA5E5;
  line-height: 1;
  vertical-align: middle;
  font-weight: bold;
  margin-right: 40rpx;
}
.vip-time {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  padding: 20rpx;
  border-top: 2rpx solid #DCDCDC;
}
.vip-time .time {
  font-size: 30rpx;
  color: #444;
}
.vip-time .btn {
    color: #FD731A;
    border: 2rpx solid #FD731A;
    text-align: center;
    padding: 8rpx 40rpx;
    border-radius: 6rpx;
    font-size: 30rpx;
}
.tab-wrapper {
  padding: 30rpx;
}
.tab-bar {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  padding: 0 10rpx;
  background-color: #5293EC;
  border-radius: 6rpx;
}
.tab-bar view {
  flex: 1;
  -webkit-flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  padding: 20rpx 0;
}
.tab-bar view.active {
  position: relative;
}
.tab-bar view.active::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 0;
  margin-left: -12rpx;
  border: 12rpx solid;
  border-color: transparent transparent #fff;
}
.license-list {
    display: flex;
    display: -webkit-flex;
    flex-wrap: wrap;
    -webkit-flex-wrap: wrap;
    padding: 0 30rpx 30rpx;
    padding-right: 0;
    font-size: 0;
}
.license-item {
  flex: 1;
  -webkit-flex: 1;
  flex-basis: calc(50% - 34rpx);
  -webkit-flex-basis: -webkit-calc(50% - 34rpx);
  max-width: calc(50% - 34rpx);
  max-width: -webkit-calc(50% - 34rpx);
  margin-right: 30rpx;
  border: 2rpx solid #eee;
  margin-bottom: 30rpx;
}

.license-item image {
  width: 100%;
  height: 300rpx;
}

.license-name {
  font-size: 30rpx;
  color: #333;
  padding: 10rpx 20rpx;
}

.point-list {
  padding: 0 30rpx;
}
.point-item-wrapper {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: center;
  -webkit-align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}
.point-list > view:first-child {
  padding-top: 0;
}
.point-list > view:last-child {
  border-bottom: 0;
}
.iten-name {
  font-size: 30rpx;
  color: #333;
}
.create-time {
  font-size: 28rpx;
  color: #B3B3B3;
}
.point-num {
  font-size: 40rpx;
  color: #FF6400;
  text-align: right;
}
.point-surplus {
  font-size: 28rpx;
  color: #B3B3B3;
  text-align: right;
}