page{
	background:white;
}
.user-box{
	padding:40rpx 30rpx;
	border-bottom:20rpx solid #f8f8f8;
}
.user{
	display: flex;
	align-items: center;
}
.user .head{
	width:140rpx;
	height:140rpx;
	margin-right:30rpx;
	border-radius:50%;
}
.head image {
  	width: 100%;
  	height: 100%;
  	border-radius: 50%;
}
.userinfo{
	flex:1;
}
.userinfo .name{
	font-size:30rpx;
	line-height: 1;
	margin-bottom:20rpx;
}
.userinfo .btns{
	display:flex;
	align-items:center;
}
.userinfo .btns .btn{
	height:48rpx;
	line-height:48rpx;
	padding:0 36rpx;
	border-radius:24rpx;
    background-color: #FF6E03;
    font-size:24rpx;
    color: #fff;
	margin-right:10rpx;
}
.userinfo .btns .txt{
	font-size:24rpx;
	color:#999;
}
.list{
	background: white;
	padding: 0 30rpx;
}
.array{
	height:40rpx;
	padding:30rpx 0;
	border-bottom:1rpx solid #e7e7e7;
}
.item{
	height:44rpx;
	line-height: 44rpx;
	font-size:30rpx;
	display: flex;
	align-items: center;
}
.item .title{
	flex:1;
}
.item .right image{
	width:44rpx;
	height:44rpx;
	vertical-align: middle;
}
.loginOut{
	margin-top:140rpx;
   	line-height:80rpx;
	height:80rpx;
    background-color:#F5F5F5;
    color: #489cf2;
	font-size:30rpx;
	text-align:center;
}