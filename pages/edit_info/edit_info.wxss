/* pages/edit_info/edit_info.wxss */
page {
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.upload-wrapper {
  width: 200rpx;
  height: 200rpx;
  margin: 80rpx auto;
  border-radius: 50%;
  font-size: 0;
}
.upload-wrapper > view {
  position: relative;
}
.upload-wrapper image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.upload-wrapper text {
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
  top: 50%;
  margin-top: -14rpx;
  display: block;
  width: 100%;
  text-align: center;
  z-index: 2;
}
.upload-wrapper .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.2);
  z-index: 1;
  border-radius: 50%;
}
.form-label {
  font-size: 30rpx;
  color: #333;
}
.form-controll input {
  width: 100%;
  height: 72rpx;
  background-color: #F9F9F9;
  border: 1px solid #ECECEC;
  border-radius: 6rpx;
  margin: 20rpx 0 40rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.form-controll .radio {
  display: inline-block;
  vertical-align: middle;
  margin-right: 30rpx;
}
.radio > view {
  width: 32rpx;
  height: 32rpx;
  border: 1px solid #DCDCDC;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 10rpx;
  box-sizing: border-box;
}
.radio > view.active {
  border: 4px solid #5393EB;
}
.radio > text {
  font-size: 32rpx;
  color: #333;
}
.btn {
  font-size: 30rpx;
  color: #fff;
  background-color: #5393EB;
  text-align: center;
  line-height: 72rpx;
  border-radius: 4rpx;
  margin-top: 60rpx;
}