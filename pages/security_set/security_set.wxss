/* pages/security_set/security_set.wxss */
page {
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.cell {
  border-bottom: 2rpx solid #eee;
  padding: 40rpx 0;
  line-height: 52rpx;
  display: flex;
  -webkit-display: flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  align-items: center;
  -webkit-align-items: center;
}
.cell-key {
  font-size: 30rpx;
}

.cell-state {
  font-size: 0;
}
.cell-state text {
  font-size: 28rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.cell-state image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.cell-state view {
  width: 112rpx;
  border-radius: 6rpx;
  text-align: center;
  height: 52rpx;
  border: 2rpx solid #666;
  color: #333;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
}

.popup-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.popup-wrapper {
  margin: 30% 60rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.popup-header {
  position: relative;
}
.popup-title {
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #3F3D4A;
  text-align: center;
  position: relative;
  font-size: 30rpx;
}
.close-icon {
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    right: 30rpx;
    top: 30rpx;
}
.popup-body {
  padding: 0 30rpx;
}
.form-label {
  font-size: 30rpx;
  margin: 40rpx 0 24rpx;
}
.form-controll {
  position: relative;
}
.form-controll input {
  border: 2rpx solid #eee;
  height: 64rpx;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}
.popup-footer {
  padding: 0 30rpx 40rpx;
}
.popup-footer .btn {
    margin-top: 20px;
    height: 64rpx;
    line-height: 64rpx;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
    border-radius: 6rpx;
    background-color: #5294EC;
}
.get-btn {
    position: absolute;
    padding: 0 30rpx;
    line-height: 64rpx;
    top: 0;
    right: 0;
    font-size: 28rpx;
    color: #89B3EF;
    z-index: 1;
}